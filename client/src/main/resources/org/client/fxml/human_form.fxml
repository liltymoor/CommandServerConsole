<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.gui.controllers.HumanFormController">
    <spacing>10</spacing>
    <Label text="Enter your data:" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="13.0" />
        </font>
    </Label>
   <Label layoutX="20.0" layoutY="20.0" text="Name" textAlignment="CENTER" />
    <TextField fx:id="nameField" />
    <Label layoutX="20.0" layoutY="20.0" text="Coordinates (x, y)" textAlignment="CENTER" />
    <HBox spacing="5.0" VBox.vgrow="NEVER">
        <TextField layoutX="20.0" layoutY="46.0" fx:id="xField" />
        <TextField fx:id="yField" layoutX="20.0" layoutY="46.0" />
    </HBox>
    <HBox spacing="67.0">
        <Label layoutX="20.0" layoutY="20.0" text="Real hero" textAlignment="CENTER" />
        <CheckBox fx:id="realHeroField" layoutX="20.0" layoutY="46.0" />
    </HBox>
    <HBox spacing="40.0">
        <Label layoutX="20.0" layoutY="20.0" text="Has toothpick" textAlignment="CENTER" />
        <CheckBox fx:id="toothpickField" layoutX="20.0" layoutY="46.0" />
    </HBox>
    <Label layoutX="20.0" layoutY="20.0" text="Impact speed" textAlignment="CENTER" />
    <TextField fx:id="impactField" layoutX="20.0" layoutY="46.0" />
    <Label layoutX="20.0" layoutY="20.0" text="Minutes of waiting" textAlignment="CENTER" />
    <TextField fx:id="minutesField" layoutX="20.0" layoutY="46.0" />
    <Label layoutX="20.0" layoutY="20.0" text="Weapon Type" textAlignment="CENTER" />
    <ComboBox fx:id="weaponField" layoutX="20.0" layoutY="46.0" />
    <Label layoutX="20.0" layoutY="20.0" text="Mood" textAlignment="CENTER" />
    <ComboBox fx:id="moodField" layoutX="20.0" layoutY="46.0" />
    <Label layoutX="20.0" layoutY="20.0" text="Car name" textAlignment="CENTER" />
    <TextField fx:id="carField" layoutX="20.0" layoutY="46.0" />
    <Button onAction="#handleSubmit" text="Submit" />
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
