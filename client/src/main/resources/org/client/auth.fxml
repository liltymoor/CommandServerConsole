<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="448.0" prefWidth="559.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="mainLabel" layoutX="168.0" layoutY="62.0" text="Авторизация">
        <font>
          <Font size="35.0" />
        </font>
    </Label>
    <VBox fx:id="authVBox" alignment="TOP_CENTER" layoutX="175.0" layoutY="129.0" prefHeight="200.0" prefWidth="209.0" visible="false">
        <TextField fx:id="usernameField" promptText="Логин">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="30.0" />
            </VBox.margin>
        </TextField>
        <PasswordField fx:id="passwordField" promptText="Пароль">
         <VBox.margin>
             <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin></PasswordField>
        <Button fx:id="authButton" mnemonicParsing="false" onAction="#auth" prefHeight="26.0" prefWidth="87.0" text="Войти">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
        <Label fx:id="registerLabel" onMouseClicked="#showRegisterMenu" onMouseEntered="#underlineRegisterLabel" onMouseExited="#undoUnderlineRegisterLabel" text="Нет аккаунта? Регистрация" textFill="#0000005d">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor>
        </Label>
    </VBox>
   <VBox fx:id="regVBox" alignment="TOP_CENTER" layoutX="175.0" layoutY="129.0" prefHeight="232.0" prefWidth="209.0">
      <children>
         <TextField fx:id="registerUsernameField" promptText="Логин">
            <VBox.margin>
               <Insets left="10.0" right="10.0" top="30.0" />
            </VBox.margin>
         </TextField>
         <PasswordField fx:id="registerPasswordField1" promptText="Пароль">
            <VBox.margin>
               <Insets left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
         </PasswordField>
         <PasswordField fx:id="registerPasswordField2" promptText="Повторите пароль">
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
         </PasswordField>
         <Button fx:id="regButton" maxWidth="117.0" mnemonicParsing="false" onAction="#register" prefHeight="30.0" prefWidth="117.0" text="Регистрация">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
         </Button>
         <Label fx:id="authLabel" onMouseClicked="#showAuthMenu" onMouseEntered="#underlineAuthLabel" onMouseExited="#undoUnderlineAuthLabel" text="Есть аккаунт? Войти" textFill="#0000005d">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            <cursor>
               <Cursor fx:constant="OPEN_HAND" />
            </cursor>
         </Label>
      </children>
   </VBox>
   <Label fx:id="errorLabel" alignment="CENTER" layoutX="134.0" layoutY="113.0" prefHeight="32.0" prefWidth="292.0" textAlignment="CENTER" textFill="RED" />
</AnchorPane>
